<UserControl x:Class="CubeProject.Modules.Editor.Views.PixelMatrixView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:CubeProject.Modules.Editor.Views">
    <Border CornerRadius="1" BorderBrush="DarkOliveGreen" BorderThickness="1">
        <Grid >
            <Image x:Name="MainScreen" SnapsToDevicePixels="True" UseLayoutRounding="True" Source="{Binding Path=RenderedSource, RelativeSource={RelativeSource AncestorType={x:Type views:PixelMatrixView}, Mode=FindAncestor}}" >
            </Image>
        </Grid>
    </Border>
</UserControl>
