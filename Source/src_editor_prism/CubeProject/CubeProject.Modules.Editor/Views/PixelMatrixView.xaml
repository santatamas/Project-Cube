<UserControl x:Class="CubeProject.Modules.Editor.Views.PixelMatrixView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border CornerRadius="1" BorderBrush="DarkOliveGreen" BorderThickness="1">
        <Grid >
            <Image x:Name="MainScreen" SnapsToDevicePixels="True" UseLayoutRounding="True" Source="{Binding Path=RenderedSource, Mode=OneWay}">
            </Image>
        </Grid>
    </Border>
</UserControl>
