<Window x:Class="PixelMatrixEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:pME="clr-namespace:PixelMatrixEditor"
        Title="Pixel Matrix Editor v0.1" Height="820" Width="820" SizeToContent="WidthAndHeight">
    <Grid>
        <Image x:Name="MainScreen" Height="720" Width="720"
               Source="{Binding Path=MatrixRenderer.RenderedSource, Mode=OneWay}"
               HorizontalAlignment="Stretch" 
               VerticalAlignment="Stretch" Stretch="Fill" MouseUp="MainScreen_OnMouseUp" MouseMove="MainScreen_OnMouseMove">
        </Image>
    </Grid>
</Window>
